# GitHub Project Manager MCP Server Configuration
# Copy this file to .env and fill in your actual values

# GitHub API Configuration
# Personal Access Token with appropriate permissions for project management
# Required scopes: repo, project, write:project
GITHUB_USERNAME=your_github_user_name
GITHUB_TOKEN=your_github_personal_access_token_here

# Logging Configuration
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# MCP Server Configuration
# Host and port for the MCP server (if running as HTTP server)
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# Optional: GitHub API Base URL (for GitHub Enterprise)
# GITHUB_API_URL=https://api.github.com

# Optional: Request timeout in seconds
# GITHUB_REQUEST_TIMEOUT=30

# Optional: Rate limiting settings
# GITHUB_RATE_LIMIT_ENABLED=true
# GITHUB_RATE_LIMIT_REQUESTS_PER_HOUR=5000
